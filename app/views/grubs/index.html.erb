<p style="color: green"><%= notice %></p>

<h1>Grubs</h1>
<table class="table table-striped">
  <thead class ="table-dark">
    <tr>
      <th>Name</th>
      <th>Cuisine</th>
      <th>Calories</th>
      <th>Price</th>
      <th>View</th>

    </tr>
  </thead>

  <div id="grubs">
    <thead>
    <% @grubs.each do |grub| %>
      <tr >
        <td><%= grub.name %></td>
        <td><%= grub.cuisine %></td>
        <td><%= grub.calories %> cal</td>
        <td>Php <%= grub.price %></td>
        <td><%= link_to "View", grub, class:"btn btn-primary"  %></td>
      </tr>
    </thead>
    <% end %>
  </div>
</table>

<%= link_to "New grub", new_grub_path,  class:"btn btn-primary btn-lg, small" %>
