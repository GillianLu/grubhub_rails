<%= form_with(model: grub) do |form| %>
  <% if grub.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(grub.errors.count, "error") %> prohibited this grub from being saved:</h2>

      <ul>
        <% grub.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div  class="field form-group">
    <%= form.text_field :name, style: "display: block", class:"form-control mt-3",placeholder:"Enter first name" %>
  </div>

  <div>
    <%= form.text_field :cuisine, style: "display: block", class:"form-control mt-3",placeholder:"Enter cuisine" %>
  </div>

  <div>
    <%= form.number_field :calories, style: "display: block", class:"form-control mt-3",placeholder:"Enter calories" %>
  </div>

  <div>
    <%= form.number_field :price, style: "display: block", class:"form-control mt-3",placeholder:"Enter price" %>
  </div>

  <div>
    <%= form.submit class:"btn btn-secondary mt-3" %>
  </div>
<% end %>
