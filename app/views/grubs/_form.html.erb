<%= stylesheet_link_tag('application') %>
<%= stylesheet_link_tag('index') %>
<%= stylesheet_link_tag('form') %>

<div class="form-container">
  <%= form_with(model: grub) do |form| %>
    <% if grub.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(grub.errors.count, "error") %> prohibited this grub from being saved:</h2>

        <ul>
          <% grub.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field form-group">
      <%= form.text_field :name, class: "form-control mt-3", placeholder: "Enter first name" %>
    </div>

    <div>
      <%= form.text_field :cuisine, class: "form-control mt-3", placeholder: "Enter cuisine" %>
    </div>

    <div>
      <%= form.number_field :calories, class: "form-control mt-3", placeholder: "Enter calories" %>
    </div>

    <div>
      <%= form.number_field :price, class: "form-control mt-3", placeholder: "Enter price" %>
    </div>

    <div>
      <%= form.submit class: "btn btn-secondary mt-3" %>
    </div>
  <% end %>
</div>
